#Bash Scripting
alias bashscripts="cd .local && cd bin && echo Remember to use chmod -x scriptname and chmod 0755 scriptname to finalize your bin bash script and make it usable."
alias listmybashscripts="echo My Bash Scripts: && ls .local/bin"

#Terminal gifs with gif-for-cli (press ctrl+C to end a loop)
alias terminalgifloop="gif-for-cli --rows 'tput lines' --cols 'tput cols' -l 0"
alias terminalgif="gif-for-cli --rows 'tput lines' --cols 'tput cols'"
